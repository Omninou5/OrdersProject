@model Order

@{
    ViewData["Title"] = "Удаление заказа";
}

<div class="mb-3">
    <a class="btn btn-sm btn-outline-primary" asp-action="Index"> < К списку заказов</a>
</div>

<h3>Удаление заказа</h3>
<hr />

<h1 class="display-6">Вы действительно хотите удалить данный заказ?</h1>
<br />
<div>
    <div class="mb-3">
        <dl class="row">
            <dt class="col-md-4">ID Заказа</dt>
            <dd class="col-md-8">@Model.Id</dd>

            <dt class="col-md-4">№ Заказа</dt>
            <dd class="col-md-8">@Model.Number</dd>

            <dt class="col-md-4">Дата заказа</dt>
            <dd class="col-md-8">@Model.Date</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="Details" asp-route-id="@Model?.Id">Отменить удаление</a>
    </form>
</div>
